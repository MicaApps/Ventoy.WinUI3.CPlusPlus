                                <ColumnDefinition Width="2.5*"/>
                                <ColumnDefinition Width="2.5*"/>
                                <ColumnDefinition Width="2.5*"/>
                                <ColumnDefinition Width="2.5*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" >
                                <TextBlock Text="版本号"></TextBlock>
                                <TextBlock Text="1.0.9.6." FontFamily="LESLIE" FontSize="52" Margin="0 20"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1" >

                                <TextBlock Text="选中的磁盘格式" FontWeight="Black" FontSize="13"></TextBlock>

                                <Grid Height="24" Margin="0 10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="2.5*"/>
                                        <ColumnDefinition Width="2.5*"/>
                                        <ColumnDefinition Width="2.5*"/>
                                        <ColumnDefinition Width="2.5*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid Grid.Column="0">
                                        <TextBlock Text="exFAT" HorizontalAlignment="Center"/>
                                    </Grid>
                                    <Grid Grid.Column="1" Background="{ThemeResource ApplicationForegroundThemeBrush}">
                                        <TextBlock Text="NTFS" Foreground="{ThemeResource AppBarSeparatorForegroundThemeBrush}" HorizontalAlignment="Center"/>
                                    </Grid>
                                    <Grid Grid.Column="2">
                                        <TextBlock Text="FAT32" HorizontalAlignment="Center"/>
                                    </Grid>
                                    <Grid Grid.Column="3">
                                        <TextBlock Text="ODF" HorizontalAlignment="Center"/>
                                    </Grid>
                                </Grid>

                                <TextBlock Text="选中的分区表格式" FontWeight="Black" FontSize="13" ></TextBlock>

                                <Grid Height="24" Margin="0 10">
