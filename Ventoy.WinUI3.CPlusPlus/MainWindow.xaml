                    </Grid>

                    <Grid Height="70" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" CornerRadius="4" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1">
                        <StackPanel Orientation="Horizontal">
                            <FontIcon Glyph="&#xF83D;"  Margin="20"/>
                            <TextBlock Text="安全启动支持" VerticalAlignment="Center"/>
                        </StackPanel>
                        <ToggleSwitch HorizontalAlignment="Right" Margin="-60"/>
                    </Grid>

                    <Grid Height="70" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" CornerRadius="4" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1">
                        <StackPanel Orientation="Horizontal">
                            <FontIcon Glyph="&#xE88E;"  Margin="20"/>
                            <TextBlock Text="目标启动设备" VerticalAlignment="Center"/>
                        </StackPanel>
                        <ComboBox HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0 0 20 0 ">
                            <ComboBoxItem>C</ComboBoxItem>
                            <ComboBoxItem>D</ComboBoxItem>
                            <ComboBoxItem>E</ComboBoxItem>
                            <ComboBoxItem>F</ComboBoxItem>
                        </ComboBox>
                    </Grid>

                    <Grid Height="70" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" CornerRadius="4" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1">
                        <StackPanel Orientation="Horizontal">
                            <FontIcon Glyph="&#xEE94;"  Margin="20"/>
                            <TextBlock Text="分区类型" VerticalAlignment="Center"/>
                        </StackPanel>
                        <ComboBox HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0 0 20 0 ">
                            <ComboBoxItem>MBR</ComboBoxItem>
                            <ComboBoxItem>GPT</ComboBoxItem>
                        </ComboBox>
                    </Grid>

                    <essential:SettingsExpander
               Description="这是拿来干啥的嘞？"
               Header="分区设置"
               IsEnabled="True"
               IsExpanded="True">
                        <!--  TODO: This should be TwoWay bound but throws compile error in Uno.  -->
                        <essential:SettingsExpander.HeaderIcon>
                            <FontIcon Glyph="&#xEB05;" />
                        </essential:SettingsExpander.HeaderIcon>

                        <essential:SettingsExpander.Items>
                            <essential:SettingsCard Header="文件系统">
                                <StackPanel Orientation="Horizontal">
                                    <RadioButton Content="EXFAT"/>
                                    <RadioButton Content="NTFS"/>
                                    <RadioButton Content="FAT32"/>
                                    <RadioButton Content="UDF"/>
                                </StackPanel>
                            </essential:SettingsCard>
                            <essential:SettingsCard Header="簇大小">
                                <StackPanel Orientation="Horizontal" >
                                    <Slider Width="200"
     AutomationProperties.Name="Slider with ticks"
     TickFrequency="20"
     TickPlacement="Outside"
     SnapsTo="StepValues" />
                                    <TextBox Width="30"/>

                                </StackPanel>
                            </essential:SettingsCard>
                            <essential:SettingsCard Header="在磁盘保留最后一段空间">
                                <StackPanel>
                                    <ToggleSwitch HorizontalAlignment="Right"/>
                                    <StackPanel Orientation="Horizontal" >

                                        <TextBox Width="30"/>
                                        <ComboBox SelectedItem="MB">
                                            <ComboBoxItem Content="MB"/>
                                            <ComboBoxItem Content="KB"/>
                                        </ComboBox>
                                    </StackPanel>
                                </StackPanel>

                            </essential:SettingsCard>
                            <essential:SettingsCard Header="分区按照4kb对齐">
                                <ToggleSwitch/>
                            </essential:SettingsCard>
                        </essential:SettingsExpander.Items>

                    </essential:SettingsExpander>

                    <Grid Height="70" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" CornerRadius="4" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1">
