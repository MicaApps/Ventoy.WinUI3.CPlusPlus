                                    </Grid>
                                    <Grid Grid.Column="1">
                                        <TextBlock Text="GAP" HorizontalAlignment="Center"/>
                                    </Grid>
                                </Grid>

                            </StackPanel>

                            <StackPanel Grid.Column="2" >
                                <TextBlock Text="版本号"></TextBlock>
                                <TextBlock Text="-" FontFamily="LESLIE" FontSize="52" Margin="0 20"></TextBlock>
                            </StackPanel>

                            <StackPanel Grid.Column="3" >

                                <TextBlock Text="现在的磁盘格式" FontWeight="Black" FontSize="13"></TextBlock>

                                <Grid Height="24" Margin="0 10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="2.5*"/>
                                        <ColumnDefinition Width="2.5*"/>
                                        <ColumnDefinition Width="2.5*"/>
                                        <ColumnDefinition Width="2.5*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid Grid.Column="0">
                                        <TextBlock Text="exFAT" HorizontalAlignment="Center"/>
                                    </Grid>
                                    <Grid Grid.Column="1" Background="{ThemeResource ApplicationForegroundThemeBrush}">
                                        <TextBlock Text="NTFS" Foreground="{ThemeResource AppBarSeparatorForegroundThemeBrush}" HorizontalAlignment="Center"/>
                                    </Grid>
